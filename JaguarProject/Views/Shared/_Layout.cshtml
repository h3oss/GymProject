<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, user-scalable=no" />
    <title>@ViewData["Title"] - JaguarProject</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" type="text/css" href="//cdn.jsdelivr.net/npm/slick-carousel@1.8.1/slick/slick.css" />
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@500&display=swap" rel="stylesheet">
    <script type="text/javascript" src="//cdn.jsdelivr.net/npm/slick-carousel@1.8.1/slick/slick.min.js">
    </script>
    <style>
        p {
            margin-top: 0;
            margin-bottom: 0;
        }

        html, body {
            font-family: Roboto;
        }
    </style>
</head>
<body>
    <header style="background-color: #f8f8e7; height:90px">
    <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
        <div class="logojaguar" style="margin-left: 15px; margin-top:-10px"> 
            <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">
                <img src="~/Images/logoNo.png" width="180" height="100" />
            </a>
        </div>
        <div class="info" style="margin-top:-25px">
            <p class="adress">г. Магнитогорск, пр.Карла Маркса 172</p>
            <p class="adress" style="color:black; font-size:18px">8 (3519) 45-69-77</p>
            <p class="adress">Рабочий e-mail: m-fit69@mail.ru</p>
        </div>
    </div>
    </header>

    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light border-bottom box-shadow mb-0 text-center" style="background-color: #4c261b">
            <div class="container" style="margin-left:420px">              
                                 
                <a class="nav-link text-white" asp-area="" asp-controller="Home" asp-action="Index">Главная</a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between text-center">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a  class="nav-link text-white" asp-area="" asp-controller="Home" asp-action="Privacy">Тарифы</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-white" asp-area="" asp-controller="Home" asp-action="Rasp">Расписание</a>
                        </li>
                        <li class="nav-item">
                            <a  class="nav-link text-white" asp-area="" asp-controller="Home" asp-action="Akcii">Акции</a>
                        </li>
                        <li class="nav-item">
                            <a  class="nav-link text-white" asp-area="" asp-controller="Home" asp-action="Team">Команда</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-white" asp-area="" asp-controller="Home" asp-action="News">Новости</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-white" asp-area="" asp-controller="Home" asp-action="Contacts">Контакты</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted" style="margin-top: 250px; background-color: #4c261b ">
        <div style="align-content:center;">
            <div style="display: flex; display: inline-block; margin-left:100px;">
                     <a href="https://vk.com/mfitness_mgn"><img style=" width:30px;" src="~/Images/vk.png" alt="" /></a>                          
            </div>
            <div style="display: flex; display: inline-block; margin-left: 400px;">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">
                    <img src="~/Images/logoNo.png" width="180" height="100" style="align-content:center" />
                </a>
            </div>
            <div style="display: flex; display: inline-block; margin-left: 300px; ">
                <div>
                    <p style="bottom:-10px; color:white">г. Магнитогорск, пр.Карла Маркса 172</p>
                </div>
            </div>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
